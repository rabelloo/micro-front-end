{
  // extends not working properly in Parcel v1
  "extends": "./tsconfig.json",
  "include": ["packages/**/*"],
  "exclude": [
    "**/dist/**/*",
    "**/node_modules/**/*",
    "packages/angular/**/*", // Angular needs a custom build
    "packages/svelte/**/*", // Svelte needs a custom build
    "packages/vue/**/*", // Vue needs a custom build
    "scripts/**/*"
  ],
  "compilerOptions": {
    "outDir": "public/dist",

    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2019",
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "jsx": "react",

    "alwaysStrict": true,
    "declaration": false,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": false,
    "strict": true
  }
}
